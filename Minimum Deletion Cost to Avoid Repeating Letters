class Solution {
public:
    int minCost(string s, vector<int>& cost) 
    {
        int ans=0;
        int lastindex=0;
        for(int i=1;i<s.length();i++)
        {
            if(s[i]!=s[lastindex])lastindex=i;
            else
            {
                ans+=min(cost[i],cost[lastindex]);
                if(cost[lastindex]<cost[i])lastindex=i;
            }
        }
        return ans;
    }
};
