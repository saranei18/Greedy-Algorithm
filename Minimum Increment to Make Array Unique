class Solution {
public:
    int minIncrementForUnique(vector<int>& nums) 
    {
        int ans=0;
        int prev=-1;
        sort(nums.begin(),nums.end());
        for(int i=0;i<nums.size();i++)
        {
            if(nums[i]<=prev)
            {
                ans+=prev+1-nums[i];
                nums[i]=prev+1;
            }
            prev=nums[i];
        }
        return ans;
    }
};
