class Solution {
public:
    int minPairSum(vector<int>& nums) 
    {
        int res=INT_MIN;
        int i=0;
        int j=nums.size()-1;
        sort(nums.begin(),nums.end());
        
        while(i<nums.size()/2)
        {
            res=max(res,nums[i]+nums[j]);
            i++;
            j--;
        }
        return res;
    }
};
