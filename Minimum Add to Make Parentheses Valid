class Solution {
public:
    int minAddToMakeValid(string s) 
    {
        int ans=0;
        int bal=0;
        for(int i=0;i<s.length();i++)
        {
            if(s[i]=='(')
                bal++;
            else
                bal--;
            if(bal==-1)
            {
                ans++;
                bal++;
            }
        }
        return ans+bal;
    }
};
