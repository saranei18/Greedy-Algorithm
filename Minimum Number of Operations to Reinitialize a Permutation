class Solution {
public:
    int reinitializePermutation(int n) 
    {
        int i=1;
        int ans=1;
        i=n/2+(i-1)/2;
        while(i!=1)
        {
            if(i%2==0)
                i=i/2;
            else
                i=n/2+(i-1)/2;
            ans++;
        }
        return ans;
    }
};
