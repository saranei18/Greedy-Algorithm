class Solution {
public:
    int monotoneIncreasingDigits(int n) 
    {
        string s=to_string(n);
        int index;
        for(int i=s.length()-1;i>0;i--)
        {
            if(s[i-1]>s[i])
            {
                s[i]='9';
                s[i-1]-=1;
                index=i;
            }
        }
        for(int i=index;i<s.length();i++)
            s[i]='9';
        return stoi(s);
    }
};
