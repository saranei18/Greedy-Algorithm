class Solution {
public:
    int balancedStringSplit(string s) 
    {
        int hash[2]={0};
        int count=0;
        for(int i=0;i<s.length();i++)
        {
            if(s[i]=='L')hash[0]++;
            else hash[1]++;
            
            if(hash[0] == hash[1])
            {
                count++;
                hash[0]=0;
                hash[1]=0;
            }
        }
        return count;
    }
};
